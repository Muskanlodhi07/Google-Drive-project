<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Google Drive UI â€“ Dark/Light</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/feather-icons"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />


  <!-- Tailwind config for dark mode class-based -->
  <script>
    tailwind.config = {
      darkMode: 'class',
    }
  </script>
</head>

<body class="bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-100">

<div class="flex flex-col md:flex-row h-screen overflow-hidden">
  <!-- Sidebar -->
  <aside class="border-blue-400 w-full md:w-64 bg-white dark:bg-gray-800 shadow-md p-4 flex flex-col">
     <div class="flex items-center space-x-1  mb-6">
    <img src="https://upload.wikimedia.org/wikipedia/commons/d/da/Google_Drive_logo.png" alt="Drive Logo" class="w-6 h-6">
    <span class="text-xl font-semibold text-blue-400 dark:text-white">Drive</span>
  </div>

    <nav class="flex-1 space-y-2 text-sm font-medium">
      <a href="/user/home" class="flex items-center gap-2 p-2 rounded hover:bg-blue-100 dark:hover:bg-gray-700 text-blue-600 dark:text-blue-400">
        <i data-feather="home" class="w-4 h-4"></i> Home
      </a>
      <a href="#" class="flex items-center gap-2 p-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
        <i data-feather="folder" class="w-4 h-4"></i> My Drive
      </a>
      <a href="#" class="flex items-center gap-2 p-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
        <i data-feather="monitor" class="w-4 h-4"></i> Computers
      </a>
      <a href="#" class="flex items-center gap-2 p-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
        <i data-feather="users" class="w-4 h-4"></i> Shared with me
      </a>
      <a href="/user/recent" class="flex items-center gap-2 p-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
        <i data-feather="clock" class="w-4 h-4"></i> Recent
      </a>
      <a href="#" class="flex items-center gap-2 p-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
        <i data-feather="star" class="w-4 h-4"></i> Starred
      </a>
      <a href="/user/bin" class="flex items-center gap-2 p-2 rounded hover:bg-gray-200 dark:hover:bg-gray-700">
        <i data-feather="trash-2" class="w-4 h-4"></i> Bin
      </a>
    </nav>

    <div class="mt-6 text-xs">
      <p class="mb-1 font-semibold">Storage: 92% full</p>
      <div class="w-full h-2 bg-gray-300 dark:bg-gray-600 rounded-full overflow-hidden">
        <div class="w-[92%] h-full bg-red-500"></div>
      </div>
      <button class="mt-2 text-blue-600 dark:text-blue-400 hover:underline">Get more storage</button>
    </div>
  </aside>

  <!-- Main content -->
  <main class="flex-1 flex flex-col overflow-hidden">
    <!-- Topbar -->
    <header class="bg-white dark:bg-gray-800 p-4 shadow flex justify-between items-center">
      <input
        type="text"
        placeholder="Search in Drive"
        class="w-2/3 px-4 py-2 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-black dark:text-white rounded-full focus:outline-none focus:ring-2 focus:ring-blue-400"
      />
      <div class="space-x-4 flex items-center text-gray-600 dark:text-gray-200">
        <i data-feather="bell" class="w-5 h-5 cursor-pointer"></i>
        <i data-feather="settings" class="w-5 h-5 cursor-pointer"></i>
        <button onclick="document.documentElement.classList.toggle('dark')">
            <i data-feather="clock" class="w-5 h-5 cursor-pointer"></i>
        </button>
        <a href="/user/register">
        <button type="button" class="px-3 py-2 text-sm flex font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
           Login  <i data-feather="log-in" class=" w-5 h-5 cursor-pointer"></i>
        </button>
        </a>
      </div>
    </header>
    <div class="p-6 flex items-center justify-center h-full text-10xl">
        <i data-feather="trash" class=" w-12 h-12"></i>
    </div>
  </main>
</div>

<!-- Feather Icons -->
<script>feather.replace()</script>

<!-- Toggle Dark Mode (Optional button for testing) -->
<script>
  // Toggle with browser setting or manually
  if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
    document.documentElement.classList.add('dark')
  }
</script>
<script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>

</body>
</html>
